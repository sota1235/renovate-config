{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":separateMajorReleases",
    ":ignoreUnstable",
    ":prNotPending",
    ":updateNotScheduled",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergePatch",
    ":automergePr",
    "npm:unpublishSafe",
    "group:monorepos",
    "group:recommended",
    "schedule:weekends",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Automerge minor updates for node-version",
      "matchDatasources": ["node-version"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "prNotPendingHours": 1,
  "timezone": "Asia/Tokyo"
}
